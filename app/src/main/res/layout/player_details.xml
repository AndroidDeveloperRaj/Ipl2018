<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:elevation="4dp"
    app:cardCornerRadius="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/player_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="6dp"
            android:paddingLeft="5dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/player_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/player_image"
            android:gravity="center"
            android:padding="4dp"
            android:text="Ms Dhoni" />

        <TextView
            android:id="@+id/player_nationality_natio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/player_name"
            android:layout_toRightOf="@+id/player_image"
            android:gravity="center"
            android:padding="4dp"
            android:text="Indian" />

        <TextView
            android:id="@+id/player_dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/player_nationality_natio"
            android:layout_toRightOf="@+id/player_image"
            android:gravity="center"
            android:padding="4dp"
            android:text="25/5/52" />

        <ImageView
            android:id="@+id/foreign_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_action_foreign"
            android:visibility="gone" />
    </RelativeLayout>
</android.support.v7.widget.CardView>